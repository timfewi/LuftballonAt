@model LuftballonAt.Web.Areas.User.Pages.Shop.Products.IndexModel


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card h-auto product-card">
                <a asp-page="/Shop/Products/Details" asp-route-id="@product.Id">
                    <img src="@product.ImageUrl" class="card-image card-img-top img-fluid" style="object-fit: cover;" alt="@product.Name">
                </a>
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">@product.Name</h6>
                    <div class="card-footer">
                        <p class="card-text"><span class="text-muted">@product.CategoryName</span></p>
                        <div class="row align-items-center">
                            <div class="col-7">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                            </div>
                            <div class="col-5 text-end">
                                <p class="card-price mb-0">@product.Price.ToString("C")</p>
                                <small class="text-muted">inkl. MwSt.</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <div class="button-container">
                            <button type="button" data-product-id="@product.Id" data-quantity="1" class="btn btn-primary w-25 d-flex justify-content-center align-items-center add-to-cart">
                                <i class="bi bi-cart-plus-fill"></i>
                            </button>

                            <a asp-page="/Shop/Products/Details" asp-route-id="@product.Id" class="btn btn-outline-primary w-100">Anzeigen</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
